#
#  Launch a fully populated job at $NUMTASK and co-locate daemons, 
#  one daemon per node, which unlocks the initial hang of all tasks. 
#
#  Update Log:
#        Aug 30 2013 DHA: Created file.
#

export RM_TYPE=@TEST_RMTP@
export MPI_JOB_LAUNCHER_PATH=@TJLPATH@
export LMON_PREFIX=@LMONPREFIX@
export LMON_NEWLAUNCHMON_ENGINE_PATH=@NEWLMON@
export LMON_LAUNCHMON_ENGINE_PATH=@LMON@

NUMNODES=@NNODES@
NOHUP=""
if test "x$RM_TYPE" = "xRC_bglrm" -o "x$RM_TYPE" = "xRC_bgprm"; then
  NOHUP=nohup
  rm -f nohup.out
fi

NUMTASKS=@SMP@

$NOHUP fe_launch_smoketest@EXE@ `pwd`/sleep_long@EXE@ $NUMTASKS $NUMNODES pdebug `pwd`/be_kicker@EXE@

if test -f nohup.out; then
  sleep $NUMNODES
  cat nohup.out
fi

