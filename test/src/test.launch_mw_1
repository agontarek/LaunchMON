#
#  Launch a fully populated job at $NUMTASK and co-locate daemons,
#  one daemon per node, which unlocks the initial hang of all tasks.
#
#  Update Log:
#        Aug 03 2010 DHA: Created file.
#

RM_TYPE=slurm
NUMNODES=2
NOHUP=""
if test "x$RM_TYPE" = "xbgrm" ; then
  NOHUP=nohup
  rm -f nohup.out
fi

NUMTASKS=`expr $NUMNODES \* 8`

export LMON_PREFIX=/g/g0/dahn/workspace/LMON_WC/MW
export LMON_LAUNCHMON_ENGINE_PATH=/g/g0/dahn/workspace/LMON_WC/MW/bin/launchmon
export LMON_MW_HOSTLIST=atlas57:atlas56:atlas544:atlas0:atlas1120

$NOHUP fe_launch_middleware `pwd`/simple_MPI $NUMTASKS $NUMNODES pdebug `pwd`/mw_comm_helper `pwd`/be_kicker

if test -f nohup.out; then
  sleep $NUMNODES
  cat nohup.out
fi

